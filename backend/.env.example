# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# Use MongoDB Atlas for production: mongodb+srv://username:password@cluster.mongodb.net/startup-obituaries
MONGODB_URI=mongodb://localhost:27017/startup-obituaries
MONGODB_TEST_URI=mongodb://localhost:27017/startup-obituaries-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cloudinary (Optional - for cloud storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration (Optional - app works without it)
# For Gmail: Use App Password, not regular password
# Generate App Password: https://myaccount.google.com/apppasswords
# Note: Email features are optional. If not configured, the app will log messages instead of sending emails.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-digit-app-password
EMAIL_FROM=noreply@phoenixcircle.com

# Frontend Configuration
# Update this to your frontend URL in production
FRONTEND_URL=http://localhost:8080

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:8080

# Other Configuration
LOG_LEVEL=debug
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Feature Flags (Optional)
ENABLE_WAR_ROOMS=true
ENABLE_MARKETPLACE=true
ENABLE_FAILURE_HEATMAP=true
